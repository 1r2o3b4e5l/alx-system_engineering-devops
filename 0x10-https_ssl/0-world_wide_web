#!/bin/bash

# Function to fetch and display DNS information
fetch_dns_info() {
  local domain=$1
  local subdomain=$2

  if [ -z "$subdomain" ]; then
    subdomains=("www" "lb-01" "web-01" "web-02")
  else
    subdomains=("$subdomain")
  fi

  for sub in "${subdomains[@]}"; do
    result=$(dig "$sub.$domain" +short)
    if [ -z "$result" ]; then
      echo "The subdomain $sub does not exist or has no A record."
    else
      echo "The subdomain $sub is an A record and points to $result"
    fi
  done
}

# Main script
domain=$1
subdomain=$2

if [ -z "$domain" ]; then
  echo "Usage: $0 domain [subdomain]"
  exit 1
fi

fetch_dns_info "$domain" "$subdomain"

