#!/usr/bin/env bash
# This script installs and configures Nginx on a new Ubuntu server to include a custom HTTP response header

# Exit immediately if a command exits with a non-zero status
set -e

# Update package list and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Set the hostname for the server
HOSTNAME=$(hostname)

# Create Nginx configuration with custom header
sudo bash -c "cat > /etc/nginx/conf.d/custom_header.conf <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
        add_header X-Served-By $HOSTNAME;
    }
}
EOF"

# Restart Nginx to apply the changes
sudo systemctl restart nginx

